            "args": [
                "${workspaceFolder}"
            ],
            "cwd": "${workspaceFolder}",
            "environment": [],
            "stopAtEntry": false,
            "externalConsole": false,
            "MIMode": "lldb",
            //TODO:
            // - https://stackoverflow.com/questions/56734812/debugging-with-bazel-in-visual-studio-code-with-ubuntu
