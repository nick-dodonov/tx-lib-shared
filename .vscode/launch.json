            // - https://www.smileykeith.com/2025/09/21/understanding-apple-debug-info/
            // dsymutil -s bazel-bin/demo/hello-pkg | grep N_OSO
            // dwarfdump bazel-out/darwin_x86_64-dbg/bin/demo/_objs/hello-pkg/main.o
            "sourceFileMap": {
                // w/ apple_support - relative paths in dwarf but "." is not mapped
                "demo": "${workspaceFolder}/demo"
            },
